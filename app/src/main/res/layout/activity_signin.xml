<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".UI.SignInActivity">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:id="@+id/signProgress"
        android:layout_centerInParent="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/topSpaceView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_button_tv"
        android:text="Sign In"
        android:layout_below="@+id/topSpaceView"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_tv_signin"
        android:text="Email"
        android:textColor="@android:color/white"
        android:layout_below="@id/sign_in_button_tv"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_et_sign"
        android:background="@drawable/background"
        android:hint="Enter your email"
        android:padding="15dp"
        android:layout_below="@id/email_tv_signin"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_tv_signin"
        android:text="Password"
        android:textColor="@android:color/white"
        android:layout_below="@+id/email_et_sign"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_et_signin"
        android:hint="Enter your password"
        android:padding="15dp"
        android:background="@drawable/background"
        android:layout_below="@id/password_tv_signin"
        android:layout_margin="16dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_margin="16dp"
        android:background="#50ffffff"
        android:textColor="@android:color/white"
        android:id="@+id/sign_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_et_signin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sign_in_btn">

    <Button
        android:id="@+id/already_sign_up_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:textColor="@android:color/white"
        android:text="New user? \nRegister"
        android:textAllCaps="false"
        android:textSize="15dp" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/mobileSignIn_btn"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginTop="20dip"
            android:text="Sign In \nusing\n Mobile Number"/>

    </LinearLayout>



</RelativeLayout>