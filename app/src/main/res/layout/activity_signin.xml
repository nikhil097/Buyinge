<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SignInActivity">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:id="@+id/signProgress"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_button_tv"
        android:text="Sign In"
        android:gravity="center"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_tv_signin"
        android:text="Email"
        android:layout_below="@id/sign_in_button_tv"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_et_sign"
        android:layout_below="@id/email_tv_signin"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_tv_signin"
        android:text="Password"
        android:layout_below="@+id/email_et_sign"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_et_signin"
        android:layout_below="@id/password_tv_signin"
        android:layout_margin="16dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/sign_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_et_signin"/>

    <Button
        android:id="@+id/already_sign_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:text="New user? \nRegister"
        android:textAllCaps="false"
        android:layout_below="@+id/sign_in_btn"
        android:textSize="15dp" />





</RelativeLayout>