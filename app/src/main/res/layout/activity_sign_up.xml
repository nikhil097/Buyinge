<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".UI.SignUpActivity">

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/signUpProgress"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register_tv"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_margin="36dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayName_tv"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:layout_below="@+id/register_tv"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/displayNameEt"
        android:layout_margin="16dp"
        android:lines="1"
        android:background="@drawable/background"
        android:layout_below="@+id/displayName_tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_tv"
        android:text="Email"
        android:textColor="@android:color/white"
        android:layout_below="@+id/displayNameEt"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/email_et"
        android:lines="1"
        android:background="@drawable/background"
        android:layout_below="@id/email_tv"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_tv"
        android:text="Password"
        android:textColor="@android:color/white"
        android:layout_below="@+id/email_et"
        android:layout_margin="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/password_et"
        android:lines="1"
        android:background="@drawable/background"
        android:layout_below="@id/password_tv"
        android:layout_margin="16dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_margin="16dp"
        android:background="#50ffffff"
        android:textColor="@android:color/white"
        android:id="@+id/register_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_et"/>

    <Button
        android:id="@+id/already_sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@null"
        android:textColor="@android:color/white"
        android:text="Already a user? \nSignin"
        android:textAllCaps="false"
        android:layout_below="@+id/register_btn"
        android:textSize="15dp" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>